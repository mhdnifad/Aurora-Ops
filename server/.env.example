# =================================
# SERVER ENVIRONMENT VARIABLES
# =================================


NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database (use Atlas URI in production)
# Example: mongodb+srv://nifad:nifad%40123@<cluster-url>/aurora-ops?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/aurora-ops
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe (Get from https://stripe.com)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRO_PRICE_ID=price_your_pro_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_plan_id

# Email Service (SendGrid/Mailgun/SES)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_smtp_password_or_api_key
EMAIL_FROM=noreply@auroraops.com

# Admin Seed (used by npm run seed:admin)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI (Get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your_openai_api_key

# Cloudinary (Get from https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
