# =================================
# SERVER ENVIRONMENT VARIABLES
# =================================

NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://mongodb:27017/aurora-ops
REDIS_URL=redis://redis:6379

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe (Get from https://stripe.com)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRO_PRICE_ID=price_your_pro_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_plan_id

# Email Service (SendGrid/Mailgun/SES)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_smtp_password_or_api_key
EMAIL_FROM=noreply@auroraops.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# CLIENT ENVIRONMENT VARIABLES
# =================================

NEXT_PUBLIC_API_URL=http://localhost:5000/api
API_SERVER_URL=http://backend:5000/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
NEXT_PUBLIC_APP_NAME=Aurora Ops
NEXT_PUBLIC_APP_URL=http://localhost:3000
